doctype html
html(lang="ko")
    head
        meta(charset="utf-8")
        title NEWS CRAWLER
        style(type="text/css").
            * {
                margin:0;
                padding:0;
            }
            ul {
                //top: 50%;
                //left:50%;
                margin-top:20px;
                margin-left:10%;
                //margin-right:50%;
            }
            li {
                float:left;
                list-style:none;
                margin:1px;
            }
            li a {
                display:block;
                width=100px;
                height=40px;
                background:#c00;
                color:#fff;
                font-size:20px;
                font-family:"돋움";
                text-align:center;
                padding-top:10px;
                padding-left:10px;
                padding-right:10px;
                padding-bottom:10px;
                text-decoration:none;
            }

            li a span {
                display:block;
            }
            li a:hover {
                background:#099;
                text-decoration:none;
            }
            table {
                width: 100%;
                font-family:"돋움";
                font-size:16px;
                padding-left:10px;
                padding-right:10px;
            }
            table, th, td {
                border: 1px solid #bcbcbc;
                float:center;
            }
            h1{
                font-family:"돋움";   
            }
            h3 {
                margin-left:5%;
            }
            form {
                margin-left:5%;
            }
        script(type='text/javascript')
            var datas = "#{datas}";
            var total_page_num = "#{total_page_num}";
            val queries = "#{queries}";
            



    body
        br 
        h3 검색어를 선택하면 해당 검색어에 대한 내용만 나옵니다.
        br
        form(action="/dev" method="get")
            div.form-group
                each query in queries
                
                    input#query.form.control(type="checkbox" name="query" value=query)
                    label(for='query')= query
                    br

            button.btm.btm-primary(type='submit') 확인
             
        
        table
            caption NEWS LIST
            thead
                tr
                    th DATE
                    th QUERY
                    th TITLE
                    th SUMMARY
                    th LINK
                
            tbody
                each data in datas
                    tr
                        td= data.date
                        td= data.query
                        td= data.title
                        td= data.summary
                        td
                            a(href=data.url)  click
        ul

                 
            - for(var i=1;i<=total_page_num;i++)
                li
                   a(href="/dev?page="+i)= i
 
